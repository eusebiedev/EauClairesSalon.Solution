@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
<div class="col">
  @using (Html.BeginForm())
  { 
    @Html.LabelFor(model => model.Name, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})

    @Html.LabelFor(model => model.Specialty, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control"})
    <br>
    <input type="submit" value="Add a new Stylist" class="btn btn-primary btn-sm"  />
  }
  <br>
  <p>@Html.ActionLink("Show all Stylists", "Index")</p>
  <p>@Html.ActionLink("Back to Home Page", "Index", "Home")</p>
</div>