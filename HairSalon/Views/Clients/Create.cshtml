@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

<p><strong>NOTE:</strong> You need to have at least one Stylist before you can add a Client!</p>
<p>Please visit our Stylists page to add one: @Html.ActionLink("Stylist", "Create", "Stylists").</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)

  @Html.LabelFor(model => model.Email)
  @Html.TextBoxFor(model => model.Email)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new Client" class="btn btn-primary btn-sm" />
}
<p>@Html.ActionLink("Show all Clients", "Index")</p>
<p>@Html.ActionLink("Back to Home Page", "Index", "Home")</p>